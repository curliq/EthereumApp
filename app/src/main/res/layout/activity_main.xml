<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="#ffffff"
    tools:context="com.ethereum.app.MainActivity">

    <FrameLayout
        android:id="@+id/mainContainer"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"/>

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="0dp"
        app:cardElevation="@dimen/bottom_card_elevation">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="64dp"
            android:weightSum="3"
            android:background="#fff"
            android:orientation="horizontal">

            <LinearLayout
                android:id="@+id/bottomChartItem"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/bottomChartImage"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:srcCompat="@drawable/ic_chart_darker_24dp"
                    android:layout_marginBottom="6dp"
                    android:layout_gravity="center"/>

                <TextView
                    android:id="@+id/bottomChartText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="14sp"
                    android:text="Chart"
                    android:textColor="@color/colorMenuItem"
                    android:layout_gravity="center"/>

            </LinearLayout>


