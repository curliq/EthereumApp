                    <!--android:layout_height="wrap_content"-->
                    <!--app:srcCompat="@drawable/ic_news_darker_24"-->
                    <!--android:layout_marginBottom="6dp"-->
                    <!--android:layout_gravity="center"/>-->

                <!--<TextView-->
                    <!--android:id="@+id/bottomNewsText"-->
                    <!--android:layout_width="wrap_content"-->
                    <!--android:layout_height="wrap_content"-->
                    <!--android:textSize="14sp"-->
                    <!--android:text="News"-->
                    <!--android:textColor="@color/colorMenuItem"-->
                    <!--android:layout_gravity="center"/>-->

            <!--</LinearLayout>-->


            <LinearLayout
                android:id="@+id/bottomWalletItem"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:alpha="0.3"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/bottomWalletImage"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:srcCompat="@drawable/ic_wallet_darker_24"
                    android:layout_marginBottom="6dp"
                    android:layout_gravity="center"/>

                <TextView
                    android:id="@+id/bottomWalletText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="14sp"
                    android:text="Wallets"
                    android:textColor="@color/colorMenuItem"
                    android:layout_gravity="center"/>

            </LinearLayout>


            <LinearLayout
                android:id="@+id/bottomSettingsItem"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:alpha="0.3"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/bottomSettingsImage"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:srcCompat="@drawable/ic_settings_darker_24dp"
                    android:layout_marginBottom="6dp"
                    android:layout_gravity="center"/>

                <TextView
                    android:id="@+id/bottomSettingsText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="14sp"
                    android:text="Settings"
                    android:textColor="@color/colorMenuItem"
                    android:layout_gravity="center"/>

            </LinearLayout>

        </LinearLayout>


    </android.support.v7.widget.CardView>


</LinearLayout>
